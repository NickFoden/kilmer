{
    "compilerOptions": {
      "target": "esnext",
      "module": "ESNext",
      "declaration": true,
      "allowJs": true,
      "outDir": "lib",
      "strict": true,
      "noUnusedLocals": true,
      "noImplicitAny": false,
      "moduleResolution": "node",
      "jsx": "react",
      "types": ["react", "jest"]
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/__tests__/*"]
  }